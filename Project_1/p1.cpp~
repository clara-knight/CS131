#include <iostream>

int summation_formula(int a, int b);
int odd_sumation(int n);

int main() {
	int a, b;

	std::cout << "Enter a: " << std::endl;
	std::cin >> a;
	std::cout << "Enter b: " << std::endl;
	std::cin >> b;

	int result = summation_formula(a, b);

	std::cout << "Result is " << result << std::endl;

	int n;
	std::cout << "Enter n: " << std::endl;
	std::cin >> n;

	int odd_numbers = odd_sumation(n);
	std::cout << "The sum of the first " << n << " odd numners is " <<
		odd_numbers << std::endl;

	return 0;
} 

// 1) Solve summation formula
// sum_{i=a}^{b} i
// From inputs a, b, n, a <= b. Answer depends on a and b, not i
int summation_formula(int a, int b) {
	int summation = 0;
	for (int i = a; i <= b; i++) {
		summation += i;
	}

	return summation;
}

// 2) Write a function that displays the sum of the first n odd numbers
int odd_sumation(int n) {
	int odds = 0;

	for (int i = 0; i < n; i++) {
		odds += 2*i + 1;
	}

	return odds;
}
